{
  "name": "NoWeidianSSO",
  "description": "Blocks SSO redirects on a certain chinese resellers!",
  "version": "3.0.0",
  "manifest_version": 3,

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "permissions": [
    "activeTab",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://*.weidian.com/*",
    "https://taobao.com/*",
    "https://www.taobao.com/*",
    "https://m.taobao.com/*",
    "https://1688.com/*",
    "https://www.1688.com/*",
    "https://m.1688.com/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.weidian.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
    "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://*.weidian.com/*"]
    }
  ]
}
